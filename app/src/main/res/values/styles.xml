<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.Widget.Edittext</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="android:Widget.Holo.Light.Button">
    </style>

    <style name="AppTheme.Widget.Edittext" parent="android:Widget.Holo.Light.EditText">
        <item name="android:textColorHint">@color/very_light_grey</item>
    </style>

    <style name="DialogBottomAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="Dialog_No_Border" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogBottomAnimation.Window</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
    </style>

    <style name="general_textview" parent="AppTheme.Widget.TextView">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="general_button" parent="android:Widget.Holo.Light.Button">
        <item name="android:textSize">@dimen/general_textsize</item>
        <item name="android:textColor">@drawable/xml_text_color_selection_for_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/general_button_height</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xml_bg_general_button</item>

    </style>

    <style name="general_button_like_checkbox" parent="general_button">
        <item name="android:textSize">@dimen/font_size_fragment_content</item>
        <item name="android:textColor">
            @drawable/xml_text_color_selection_for_where_do_you_meet_your_client_item
        </item>
        <item name="android:background">@drawable/xml_bg_checkbox_selection</item>

    </style>

</resources>
